@model IEnumerable<IntProg.Models.Aktor>

@{
    ViewData["Title"] = "Index";
}

<h1>Aktörler</h1>

<p>
    <a class="btn btn-primary"  asp-action="Create">Yeni Kayıt</a>
</p>
<table class="table table-bordered table-striped" id="tbllist">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                Aktör Adı
            </th>
            <th>
               Son Gösteri Tarihi
            </th>
            <th>
                Aktör Resmi
            </th>
            <th>
               Gösteri
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AktorAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SonGosteri)
            </td>
            <td>
                    <img src="@Url.Content(@item.AktorResim)" alt="Ürün Görseli" width="150" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gosteri.GosteriAd)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AktorId">Edit</a> |
                    <a class ="btn btn-primary" asp-action="Details" asp-route-id="@item.AktorId">Details</a> |
                    <a class ="btn btn-danger" asp-action="Delete" asp-route-id="@item.AktorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/js/scripts.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#tbllist').DataTable({

        });
    });
</script>