@model IEnumerable<IntProg.Models.Gosteri>

@{
    ViewData["Title"] = "Index";
}

<h1>Gösteriler</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Kayıt</a>
</p>
<table class="table table-bordered table-striped" id="tbllist">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                Gösteri Adı
            </th>
            <th>
                Gösteri Tarihi
            </th>
            <th>
                Gösteri Yeri
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GosteriAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GosteriTarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GosteriYeri)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.GosteriId">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.GosteriId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.GosteriId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/js/scripts.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#tbllist').DataTable({

        });
    });
</script>